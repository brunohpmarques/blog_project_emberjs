<div class="row mb-3">
    <div class="col-8">
        <h1>New Category</h1>
    </div>
</div>

{{#if showAlert}}
    {{alert message="Category created!" variant="success"}}
{{/if}}

<div class="row py-1">
    <div class="col-12">
        <label>Name:</label>
        {{input value=categoryName class="form-control border" classBinding="isInvalid:border-danger"}}
    </div>
</div>

<div class="row py-1">
    <div class="col-12">
        {{#unless isLoading}}
            <button type="button" {{action create}} class="btn btn-success">Create</button>
        {{/unless}}

        {{#if isLoading}}
            <button type="button" disabled="disabled" class="btn btn-success">
                {{loading}}
                Creating
            </button>
        {{/if}}
    </div>
</div>
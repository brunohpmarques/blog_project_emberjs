<div class="row mb-3">
    <div class="col-8">
        <h1>New Author</h1>
    </div>
</div>

{{#if showAlert}}
    {{alert message="Author created!" variant="success"}}
{{/if}}

<div class="row py-1">
    <div class="col-6">
        <label>Name:</label>
        {{input value=authorName class="form-control border" classBinding="isInvalidName:border-danger"}}
    </div>
</div>
<div class="row py-1">
    <div class="col-6">
        <label>E-mail:</label>
        {{input value=authorEmail type="email" class="form-control border" classBinding="isInvalidEmail:border-danger"}}
    </div>
</div>
<div class="row py-1">
    <div class="col-6">
        <label>Password:</label>
        {{input value=authorPassword type="password" class="form-control border" classBinding="isInvalidPassword:border-danger"}}
    </div>
</div>

<div class="row py-1">
    <div class="col-12">
        {{#unless isLoading}}
            <button type="button" {{action create}} class="btn btn-success">Create</button>
        {{/unless}}

        {{#if isLoading}}
            <button type="button" disabled="disabled" class="btn btn-success">
                {{loading}}
                Creating
            </button>
        {{/if}}
    </div>
</div>
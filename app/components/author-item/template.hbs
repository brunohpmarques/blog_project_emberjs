<div class="row py-1">
    <div class="col-1">
        # {{author.id}}
    </div>
    <div class="col-5">
        {{author.name}}
    </div>
    <div class="col-4">
        {{author.email}}
    </div>
    <div class="col-2 text-right">
        {{#link-to "authors.edit" author.id}}
            <button type="button" class="btn btn-light btn-sm">✏️</button>
        {{/link-to}}
        <button type="button" {{action delete author}} class="btn btn-light btn-sm">🗑️</button>
    </div>
</div>
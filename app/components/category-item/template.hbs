<div class="row py-1">
    <div class="col-1">
        # {{category.id}}
    </div>
    <div class="col-9">
        {{#unless isEdit}}
            {{category.name}}
        {{/unless}}

        {{#if isEdit}}
            {{input value=category.name class="form-control form-control-sm"}}
        {{/if}}
    </div>
    <div class="col-2 text-right">
        <button type="button" {{action "toggleEdit"}} class="btn btn-light btn-sm">✏️</button>
        <button type="button" {{action "remove"}} class="btn btn-light btn-sm">❌</button>
    </div>
</div>
<div class="row py-1">
    <div class="col-1">
        # {{category.id}}
    </div>
    <div class="col-9">
        {{#unless isEdit}}
            {{category.name}}
        {{/unless}}

        {{#if isEdit}}
            {{input value=category.name class="form-control form-control-sm border" classBinding="isInvalid:border-danger"}}
        {{/if}}
    </div>
    <div class="col-2 text-right">
        {{#unless isEdit}}
            <button type="button" {{action toggleEdit}} class="btn btn-light btn-sm">✏️</button>
            <button type="button" {{action remove category}} class="btn btn-light btn-sm">🗑️</button>
        {{/unless}}

        {{#if isEdit}}
            <button type="button" {{action update category}} class="btn btn-success btn-sm">✔️</button>
            <button type="button" {{action toggleEdit}} class="btn btn-light btn-sm">✖️</button>
        {{/if}}
    </div>
</div>
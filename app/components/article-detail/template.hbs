{{#if isLoading}}
    <div class="row">
        <div class="col-12 text-center">
            {{loading}}
        </div>
    </div>
{{/if}}

{{#unless isLoading}}
  <div class="card mb-3">
    <img  src="{{article.image}}" class="card-img-top">
    <div class="card-body">
      <h5 class="card-title">{{article.title}}</h5>
      <p class="card-text">{{article.content}}</p>
      <p class="card-text"><small class="text-muted">Created at: {{createdDate}}</small></p>
      <p class="card-text"><small class="text-muted">Updated at: {{updatedDate}}</small></p>
    </div>
  </div>
{{/unless}}
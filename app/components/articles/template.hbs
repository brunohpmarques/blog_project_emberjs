<div class="row mb-3">
    <div class="col-8">
        <h1>Articles</h1>
    </div>
    <div class="col-4 text-right">
        {{#link-to "articles.new"}}
            <button type="button" class="btn btn-primary">âž• New Article</button>
        {{/link-to}}
    </div>
</div>

{{#if isLoading}}
    <div class="row">
        <div class="col-12 text-center">
            {{loading}}
        </div>
    </div>
{{/if}}

{{#unless isLoading}}
    {{#each articles as |article|}}
        {{article-item article=article}}
    {{/each}}
{{/unless}}